/* pages/result/result.wxss */

page {
  height: 100%;
}

.container {
  width: 100%;
  min-height: 100%;
  /* display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between; */
  padding: 20rpx 20rpx 0;
  box-sizing: border-box;
  background-color: #F7F7F7;
  position: relative;
}

.top {
  background-color: #fff;
}

.pro-image {
  width: 100%;
}

.pro-title {
  font-style: 28rpx;
  font-family: SourceHanSansCN-Bold, SourceHanSansCN;
  font-weight: bold;
  color: rgba(59, 59, 59, 1);
  padding: 28rpx 20rpx 0;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.swiper {
  height: 240rpx;
}

.pro-items {
  display: flex;
  width: 100%;
  flex-wrap: wrap;
  align-content: center;
}

.pro-item {
  padding: 0 20rpx 20rpx;
  width: 50%;
  box-sizing: border-box;
}

.pro-item .title {
  font-size: 24rpx;
  color: #7D7D7D;
  font-weight: 400;
  width: 100rpx;
  padding-right: 40rpx;
  display: inline-block;
  text-align: justify;
  text-align-last: justify;
}

.pro-item .content {
  font-size: 24rpx;
  color: #3F3F3F;
  font-weight: 500;
}

.bottom {
  width: 100%;
  margin-top: 24rpx;
  padding-bottom: 60rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.cont-item {
  width: 50%;
  background-color: #fff;
  border-bottom: solid 1px #EBEBEB;
  border-right: solid 1px #EBEBEB;
  box-sizing: border-box;
  padding: 34rpx 0 34rpx 40rpx;
  display: flex;
  align-items: center;
}

.cont-image {
  width: 112rpx;
  height: 112rpx;
  margin-right: 16rpx;
}

.cont-text {
  font-size: 28rpx;
  color: #3F3F3F;
}

.dialog {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.75);
}

.dialog-wrap {
  width: 560rpx;
  margin: 0 auto 40rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 8px;
  overflow: hidden;
}

.dialog-title {
  font-size: 32rpx;
  color: #fff;
  background-color: #4C43FF;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
}

.dialog-cont {
  padding: 24rpx 40rpx 60rpx;
}

.dialog-cont-image {
  height: 164rpx;
  width: 100%;
  padding-top: 24rpx;
}

.dialog-cont-image image {
  width: inherit;
  height: 100%;
}

.dialog-cont-cont {
  display: flex;
  justify-content: space-evenly;
  margin-top: 20rpx;
}

.dialog-font1 {
  font-size: 28rpx;
  color: #7D7D7D;
  font-weight: 400;
}

.dialog-font2 {
  font-size: 28rpx;
  color: #3F3F3F;
  font-weight: 500;
}

.dialog-cancel {
  text-align: center;
}

.dialog-cancel image {
  width: 76rpx;
  height: 76rpx;
}

/* 物流配送 */

.trans-wrap {}

.trans-item {
  width: 100%;
  overflow: hidden;
  display: flex;
  align-items: stretch;
}

.trans-item>view {
  float: left;
  padding: 20rpx 0;
}

.trans-time {
  font-size: 24rpx;
  color: #5B5B5B;
  width: 120rpx;
  border-right: solid 2rpx #ccc;
}

.trans-node image {
  width: 24rpx;
  height: 24rpx;
  margin-left: -11rpx;
}

.trans-event {
  font-size: 24rpx;
  color: #fff;
  width: 320rpx;
  margin-left: 16rpx;
}

.trans-event>view {
  background-color: #2B66F6;
  line-height: 56rpx;
  text-indent: 24rpx;
  position: relative;
}

.trans-event>view::before {
  content: "";
  display: block;
  position: absolute;
  top: 16rpx;
  left: -20rpx;
  width: 0;
  height: 0;
  border: 10rpx solid;
  border-color: transparent #2B66F6 transparent transparent;
}

.qkl-wrap {
  padding: 30rpx 40rpx;
  border: 2rpx dashed #FF9456;
  font-size: 28rpx;
  font-family: SourceHanSansCN-Regular, SourceHanSansCN;
  font-weight: 400;
  color: #FF9456;
  line-height: 32rpx;
  word-wrap: break-word;
}